<div class="container mt-5">
  <h1>Task Info</h1>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2><%= @task.title %></h2>
     <%= link_to edit_task_path(@task.id), class: 'btn btn-light btn-sm border' do %>
      <i class="fa fa-pencil"></i> Edit this task
    <% end %>
  </div>
  <p class="well"><%= @task.details%></p>
  <% if @task.completed %>
    <i class="fa fa-check-square-o"></i> This task is completed
  <% else %>
    <i class="fa fa-square-o"></i> This task is not completed yet
  <% end %>

  <p>
    <%#= link_to 'all tasks', tasks_path %>
  </p>

  <p>
    <%= link_to 'Edit this task', edit_task_path(@task) %>
  </p>

   <hr>
  <%= link_to tasks_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to list
  <% end %>
</div>


  <p>
    <%#= link_to 'Remove', task_path(@task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </p>
</div>
